<div class="container mt-4">
  <div class="row">
    <div >
      <h1>Edit event</h1>
      <div >
       <div class="container">
          <%= simple_form_for @event, data: { controller: 'flatpickrnew' } do |f| %>
            <% @event.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
            <%= f.input :name %>
            <%= f.input :start_date, as: :string, input_html: { data: { flatpickrnew_target: "startDate" } } %>
            <%= f.input :end_date, as: :string, input_html: { data: { flatpickrnew_target: "endDate" } } %>
            <%= f.input :notes %>
            <%#= f.input :img_url %>
            <%#= f.input :photo, as: :file %>
            <%= f.submit class: "btn btn-form" %>
          <% end %>
        <p>Start date: <span id="startDate1"><%= @event.start_date %></span></p>
        <p>End date: <span id="endDate1"><%= @event.end_date %></span></p>
       </div>

      </div>
    </div>
  </div>
</div>
